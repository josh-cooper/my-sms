-# Display attr list of ActiveRecord model
-# Locals: model_class, model_instance, display_attrs, display_ovrd (display override)
-# Display display_attrs of model_instance.
-# Requires model_class to be specified to humanise names and access correct routes for model.
-# Pass hash display_ovrd with attr names to override the default display in the %format:
-# { attr_name1: {heading: , value: }, ... }

- model_class = model_instance.class

-# attr list
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
%dl.dl-horizontal
  - display_attrs.each do |e|
    %dt.model-list-heading
      %span.model-list-heading-text= display_ovrd&.dig(e, :heading) || model_class.human_attribute_name(e)
    %dd.model-list-value= display_ovrd&.dig(e, :value) || model_instance.send(e)

-# action buttons
-# back, edit destroy
= render partial: 'shared/crud_button', locals: { name: 'back', link_args: ["#{model_class.model_name.pluralize.downcase}_path"], class_name: 'btn-default' }
= render partial: 'shared/crud_button', locals: { name: 'edit', link_args: ["edit_#{model_class.model_name.downcase}_path", model_instance], class_name: 'btn-default' }
= render partial: 'shared/crud_button', locals: { name: 'destroy', link_args: ["#{model_class.model_name.downcase}_path", model_instance], class_name: 'btn-danger',
  kwargs: { method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) } } }

-# Add note
%a.btn.btn-default{'data-toggle': 'collapse', href: '#addComment', 'aria-expanded': 'false'} Add Note
%div.collapse#addComment
  = render(partial: 'notes/form_new', locals: { notable: model_instance })
